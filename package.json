{
  "name": "next-express-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch .next server.ts",
    "build:next": "next build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:next && npm run build:server",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "express": "^4.18.2",
    "next": "^16.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "eslint": "^8.40.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  }
}
